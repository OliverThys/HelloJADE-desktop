{
  "name": "hellojade-backend",
  "version": "1.0.0",
  "description": "Backend HelloJADE avec PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:init": "docker-compose up -d postgres && sleep 5 && echo 'Base de données initialisée'",
    "setup": "npm run docker:up && npm run db:init"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "nodemon": "^3.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "hellojade",
    "postgresql",
    "docker",
    "api"
  ],
  "author": "HelloJADE Team",
  "license": "MIT"
} 
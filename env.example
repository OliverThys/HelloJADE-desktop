# HelloJADE v1.0 - Variables d'environnement
# Copier ce fichier vers .env et remplir les valeurs

# Application
HELLOJADE_SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Base de données Oracle
ORACLE_HOST=localhost
ORACLE_SERVICE=XE
ORACLE_USER=hellojade
ORACLE_PASSWORD=your-oracle-password

# LDAP Hospitalier
LDAP_SERVER=ldap.epicura.be
LDAP_BASE_DN=dc=epicura,dc=be
LDAP_BIND_DN=cn=hellojade,ou=services,dc=epicura,dc=be
LDAP_BIND_PASSWORD=your-ldap-bind-password
LDAP_USER_SEARCH_BASE=ou=users,dc=epicura,dc=be
LDAP_GROUP_SEARCH_BASE=ou=groups,dc=epicura,dc=be

# Téléphonie Asterisk
ASTERISK_HOST=localhost
ASTERISK_USER=hellojade
ASTERISK_PASSWORD=your-asterisk-password

# Zadarma
ZADARMA_API_KEY=your-zadarma-api-key
ZADARMA_API_SECRET=your-zadarma-api-secret
ZADARMA_WEBHOOK_URL=https://your-domain.com/api/webhooks/zadarma

# Monitoring
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password

# Notifications (optionnel)
SMTP_HOST=smtp.epicura.be
SMTP_USER=noreply@epicura.be
SMTP_PASSWORD=your-smtp-password

TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+32123456789

# Configuration développement
NODE_ENV=development
FLASK_ENV=development
TAURI_ENV=development 
{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "HelloJADE",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA/HelloJADE/**", "$APPDATA/HelloJADE/logs/**"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:5000/**", "https://api.hellojade.com/**"]
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "path": {
        "all": true
      },
      "os": {
        "all": false
      }
    },
    "bundle": {
      "active": false,
      "targets": "all",
      "identifier": "com.epicura.hellojade",
      "icon": [],
      "resources": [],
      "externalBin": [],
      "copyright": "Â© 2024 Epicura Belgium",
      "category": "Medical",
      "shortDescription": "Application de gestion post-hospitalisation",
      "longDescription": "HelloJADE - Application desktop SaaS pour les appels post-hospitalisation avec transcription automatique, analyse IA et tableau de bord patient.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null,
        "hardenedRuntime": true,
        "entitlements": null,
        "minimumSystemVersion": "10.13"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": ["fr-FR", "en-US"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "HelloJADE - Gestion Post-Hospitalisation",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": true,
        "fileDropEnabled": false,
        "closable": true,
        "minimizable": true,
        "maximizable": true,

        "contentProtected": false
      }
    ]
  }
} 